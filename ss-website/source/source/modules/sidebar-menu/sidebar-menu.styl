.sidebar-menu
	//

	ul-reset()

	&__title
		margin 0
		padding 10px 20px
		font-size 18px
		border-bottom 1px solid #dadada

	&__item
		font-size 14px
		padding 0 0 0 0
		list-style none
		color: #fff;

	&__link
		color: #fff;

		&
		&:visited
			color: #fff;
			font-weight bold
			display block
			padding 6px 27px 8px
			text-decoration none
		&:hover
			color: #fff;
			text-decoration underline

	&__submenu
		padding 0 20px 0 27px

