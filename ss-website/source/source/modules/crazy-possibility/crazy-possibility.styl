.crazy-possibilty
	position: relative;
	padding: 0 0 0 0;
	margin: 0 0 0 0;

	&__img
		float: left;
		width: 157px;
		height: 157px;
		border 1px dashed gray
		border-radius: 50%;
		text-align: center;
		display: flex;
		justify-content: center;
		align-items: center;

		&__inner
			border-radius: 50%;
			height: 114px;
			width: 114px;
			background-color: #f5f7f8;

		& svg
			width: 100%;
			height: 100%;

	&__info
		padding: 0 0 0 0;
		margin: 0 0 0 230px;

	&__title
		padding: 0 0 10px 0;
		margin: 0 0 0 0;
		font-size: 16px;
		color: gray

	&__text
		font-size: 14px;
		color: gray
		line-height: 22px;
		padding: 0 0 0 0;
		margin: 0 0 0 0;

