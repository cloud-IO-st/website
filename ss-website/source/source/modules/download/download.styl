.download
	position: relative;

	&:hover &-menu
		display: block;

	&-menu
		display: none;
		line-height: normal;
		position: absolute;
		top: 100%;
		left: 50%;
		border: 1px solid #CCCEEE;
		background-color: #fff;
		border-radius: 2px;
		z-index: 999;
		width: 160px;
		margin-left: -80px;
		box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.1);
		transition: 125ms all ease-in-out;

		&:before
			content: "";
			position: absolute;
			bottom: 100%;
			left: 75px;
			border-bottom: 10px solid #ccceee;
			border-left: 10px solid transparent;
			border-right: 10px solid transparent;

		&:after
			content: "";
			position: absolute;
			bottom: 100%;
			left: 77px;
			border-bottom: 8px solid #f8fbfd;
			border-left: 8px solid transparent;
			border-right: 8px solid transparent;

		& ul
			margin: 0;
			padding: 0;

		&__item
			border-bottom: 1px solid #303644
			padding: 0 0 0 0;
			margin: 0 0 0 0;
			font-size: 14px;
			text-align: left;
			list-style: none;

			&:last-child
				border-bottom: none;

			& a
				line-height: 32px;
				text-decoration: none;
				display: inline-block;
				padding: 0 10px;
				width: 100%;
				box-sizing: border-box;

