.getting-started-main
	position: relative;
	height: 320px;
	background-color: #303644
	display: flex;
	flex-direction: column;
	justify-content: center;
	+below($media-screen-sm)
		height auto

	&_inner
		height: 200px;

	&__info
		max-width: 570px;
		margin: 0 auto;
		position: relative;
		height: 100%;
		+below($media-screen-sm)
			padding 20px

	&_inner &__info
		max-width: 960px;
		display: flex;
		flex-direction: column;
		justify-content: center;

	&-info
		color: white
		text-align: center;

		&__title
			font-size: 22px;
			line-height: 34px;
			padding: 0 0 15px 0;
			margin: 0 0 0 0;
			color: white

		&__text
			font-size: 16px;
			line-height: 34px;
			padding: 0 0 15px 0;
			margin: 0 0 0 0;

