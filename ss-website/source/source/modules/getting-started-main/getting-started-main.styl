.getting-started-main
	position: relative;
	height: 320px;
	background-color: #303644
	display: flex;
	flex-direction: column;
	justify-content: center;

	&__info
		width: 570px;
		margin: 0 auto;
		position: relative;

	&-info
		color: white
		text-align: center;

		&__title
			font-size: 22px;
			line-height: 34px;
			padding: 0 0 15px 0;
			margin: 0 0 0 0;

		&__text
			font-size: 16px;
			line-height: 34px;
			padding: 0 0 15px 0;
			margin: 0 0 0 0;

