include ../modules/head/head
include ../modules/footer/footer
include ../modules/browsehappy/browsehappy
include ../modules/header-inner/header-inner
include ../modules/sidebar/sidebar
include ../modules/page-title/page-title
include ../modules/demo/demo
include ../modules/accordion/accordion
include ../modules/analytics/analytics


doctype html
html(class="no-js" lang="en")

    head
        +head()

    body.page.page_background-gray
        +browsehappy(browsehappy)

        .page__header
            +header-inner()

        .page-docs

            .page-docs__content
                //-+demo()
                +sidebar('tutorials.html')

                .content-wrapper

                    +page-title({"title": "Tutorials: Installation"})

                    section
                        p
                        +accordion()
                            +accordion-item({"title": "1\) Installation on Mac", "open": true, "id": "installation-mac"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.a109b7890aedc1287aae7a56ad89cc9c/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')
                            +accordion-item({"title": "2\) Installation on Windows",  "id": "installation-win"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.e71f7335b7f54cfd9f3c33d4407ea2cf/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')


            .page__footer
                +footer()

            .clear

        //- Scripts
        script(src='js/plugins.min.js')
        script(src='js/main.min.js')
        +analytics()
