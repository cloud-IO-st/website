include ../modules/browsehappy/browsehappy
include ../modules/header-inner/header-inner
include ../modules/sidebar/sidebar
include ../modules/page-title/page-title
include ../modules/demo/demo
include ../modules/accordion/accordion
include ../modules/analytics/analytics


doctype html
html(class="no-js" lang="en")

    head
        +head()

    body.page.page_background-gray
        +browsehappy(browsehappy)

        .page__header
            +header-inner()

        .page-docs

            .page-docs__content
                //-+demo()
                +sidebar('tutorials.html')

                .content-wrapper

                    +page-title({"title": "Tutorials: User identity management"})

                    section
                        p
                        +accordion()
                            +accordion-item({"title": "1\) User management", "open": true, "id": "UserRegistration"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.4a35f13a548289533932d94a60fa8dce/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

                            +accordion-item({"title": "2\) Change password", "id": "ChangePassword"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.ecd98ac42cf16a8a16c206c1ec116173/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

                            +accordion-item({"title": "3\) Set User PGP Key", "id": "pgpPlugin"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.64dc787a802ea4e906faafc624f0e795/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

                            +accordion-item({"title": "4\) Tokens User PGP Key", "id": "TokensOwnPgpKey"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.71239c5c18a38d628e5b26fa20047711/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

                            +accordion-item({"title": "5\) Roles Management", "id": "RolesManagement"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.c90ee0d15d22480dee2cf16755db666f/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')


            .page__footer
                +footer()

            .clear

        //- Scripts
        script(src='js/plugins.min.js')
        script(src='js/main.min.js')
        +analytics()
