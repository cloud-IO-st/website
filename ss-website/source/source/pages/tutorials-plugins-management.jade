include ../modules/head/head
include ../modules/footer/footer
include ../modules/browsehappy/browsehappy
include ../modules/header-inner/header-inner
include ../modules/sidebar/sidebar
include ../modules/page-title/page-title
include ../modules/demo/demo
include ../modules/accordion/accordion
include ../modules/analytics/analytics


doctype html
html(class="no-js" lang="en")

    head
        +head()

    body.page.page_background-gray
        +browsehappy(browsehappy)

        .page__header
            +header-inner()

        .page-docs

            .page-docs__content
                //-+demo()
                +sidebar('tutorials.html')

                .content-wrapper

                    +page-title({"title": "Tutorials: Plugins management"})

                    section
                        p
                        +accordion()

                            +accordion-item({"title": "1\) Appscale plugins installation", "open": true, "id": "PluginAppScaleInstall"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.35d2857ef2911a98af0f70d36872ba1f/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

                            +accordion-item({"title": "2\) Appscale running application", "id": "AppScaleUse"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.3e02abac4353dc6a4090e1f8c1a2566a/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

                            +accordion-item({"title": "3\) Generic Plugin Demo", "id": "PluginGeneric"})
                                video(width="100%", height="450", controls="controls", preload="none")
                                    source(src="https://cdn.subut.ai:8338/kurjun/raw-files/raw.98b86ffe0c558b8fc533f11bf2428bf5/download", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

            .page__footer
                +footer()

            .clear

        //- Scripts
        script(src='js/plugins.min.js')
        script(src='js/main.min.js')
        +analytics()
