include ../modules/head/head
include ../modules/footer/footer
include ../modules/browsehappy/browsehappy
include ../modules/header-inner/header-inner
include ../modules/sidebar/sidebar
include ../modules/page-title/page-title
include ../modules/demo/demo
include ../modules/accordion/accordion


doctype html
html(class="no-js" lang="en")

	head
		+head()

	body.page.page_background-gray
		+browsehappy(browsehappy)
		
		.page__header
			+header-inner()

		.page-docs

			.page-docs__content
				//-+demo()
				+sidebar()

				.content-wrapper

					+page-title({"title": "Tutorials"})

					section
						p
						+accordion()
							+accordion-item({"title": "1\) Cross peer environment creation", "open": true, "id": "CrossPeerEnviOnRemotePeer"})
								video(width="100%", height="450", controls="controls", preload="none")
									source(src="https://s3.amazonaws.com/uploads.hipchat.com/529982/3522632/zcr3y66jUijz5hg/playbook_CrossPeerEnviOnRemotePeer.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')
							
							+accordion-item({"title": "2\) User management", "id": "UserRegistration"})
								video(width="100%", height="450", controls="controls", preload="none")
									source(src="https://s3.amazonaws.com/uploads.hipchat.com/529982/3522632/8DvmeULMVT6j4Yc/UserRegistration.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

							+accordion-item({"title": "3\) Multi host envrionment creation", "id": "CrossPeerWithTwoHosts"})
								video(width="100%", height="450", controls="controls", preload="none")
									source(src="https://s3.amazonaws.com/uploads.hipchat.com/529982/3522632/vWZhmKxlVnYfnhH/playbook_CrossPeerWithTwoHosts.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

							+accordion-item({"title": "4\) Registration to HUB", "id": "PeerRegistration"})
								video(width="100%", height="450", controls="controls", preload="none")
									source(src="https://s3.amazonaws.com/uploads.hipchat.com/529982/3522632/z380i9VbhxICyQy/PeerRegistration.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

							+accordion-item({"title": "5\) Appscale plugins installation", "id": "PluginAppScaleInstall"})
								video(width="100%", height="450", controls="controls", preload="none")
									source(src="https://s3.amazonaws.com/uploads.hipchat.com/529982/3522632/Rhnq4bKDvpLac0w/PluginAppScaleInstall.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

							+accordion-item({"title": "6\) Appscale running application", "id": "AppScaleUse"})
								video(width="100%", height="450", controls="controls", preload="none")
									source(src="https://s3.amazonaws.com/uploads.hipchat.com/529982/3522632/H3BN3e7WU3jdl6l/AppScaleUse.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')

			.page__footer
				+footer()

			.clear
		
		//- Scripts
		script(src='js/plugins.min.js')
		script(src='js/main.min.js')
